<!-- Street Lookbook Page - Urban Streetwear Aesthetic -->
<div class="street-lookbook">
  <!-- Hero Section -->
  <header class="street-hero">
    <div class="street-hero__bg">
      <div class="street-hero__noise"></div>
      <div class="street-hero__gradient"></div>
    </div>
    <div class="street-hero__content">
      <span class="street-hero__tag">// SEASON 01</span>
      <h1 class="street-hero__title" data-text="STREET">STREET</h1>
      <p class="street-hero__subtitle">Heavyweight essentials built for the concrete jungle.</p>
      <div class="street-hero__scroll">
        <span class="street-hero__scroll-text">SCROLL</span>
        <div class="street-hero__scroll-line"></div>
      </div>
    </div>
  </header>

  <!-- Manifesto Section -->
  <section class="street-manifesto">
    <div class="street-manifesto__container">
      <div class="street-manifesto__label">DIVISION.001</div>
      <h2 class="street-manifesto__heading">
        FOR THOSE WHO<br/>
        <span class="street-manifesto__accent">MOVE DIFFERENT</span>
      </h2>
      <p class="street-manifesto__text">
        14oz heavyweight cotton. Industrial cuts. Oversized silhouettes. 
        Every piece is built to weather the streets and outlast the trends.
      </p>
      <div class="street-manifesto__stats">
        <div class="street-stat">
          <span class="street-stat__value">14oz</span>
          <span class="street-stat__label">WEIGHT</span>
        </div>
        <div class="street-stat">
          <span class="street-stat__value">LA</span>
          <span class="street-stat__label">BLANKS</span>
        </div>
        <div class="street-stat">
          <span class="street-stat__value">∞</span>
          <span class="street-stat__label">WASHES</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Full Bleed Image Section -->
  <section class="street-fullbleed">
    <div class="street-fullbleed__image-container">
      <img src="{{ 'street-lookbook-placeholder.png' | asset_url }}" alt="Night City" class="street-fullbleed__image">
      <div class="street-fullbleed__overlay"></div>
    </div>
    <div class="street-fullbleed__content">
      <span class="street-fullbleed__number">001</span>
      <h3 class="street-fullbleed__title">NIGHT CITY</h3>
      <p class="street-fullbleed__desc">When the sun goes down, the real ones come out.</p>
      <a href="/collections/street" class="street-fullbleed__cta">SHOP THIS LOOK</a>
    </div>
    <div class="street-fullbleed__scanlines"></div>
  </section>

  <!-- Bento Grid -->
  <section class="street-grid">
    <div class="street-grid__container">
      <!-- Main Feature -->
      <div class="street-grid__item street-grid__item--feature">
        <img src="{{ 'vibe-urban.png' | asset_url }}" alt="Cyber Vibes" class="street-grid__image">
        <div class="street-grid__overlay">
          <div class="street-grid__glitch" data-text="002">002</div>
          <h4 class="street-grid__title">CYBER VIBES</h4>
          <span class="street-grid__tag">@cyber_junkie</span>
        </div>
      </div>

      <!-- Side items -->
      <div class="street-grid__item">
        <img src="{{ 'trip-chrome.png' | asset_url }}" alt="Chrome Dreams" class="street-grid__image">
        <div class="street-grid__overlay">
          <div class="street-grid__glitch" data-text="003">003</div>
          <h4 class="street-grid__title">LIQUID CHROME</h4>
        </div>
      </div>

      <div class="street-grid__item">
        <img src="{{ 'street-lookbook-placeholder.png' | asset_url }}" alt="Shadow Play" class="street-grid__image">
        <div class="street-grid__overlay">
          <div class="street-grid__glitch" data-text="004">004</div>
          <h4 class="street-grid__title">SHADOW PLAY</h4>
        </div>
      </div>

      <div class="street-grid__item street-grid__item--wide">
        <img src="{{ 'street-lookbook-placeholder.png' | asset_url }}" alt="Subway Surfers" class="street-grid__image">
        <div class="street-grid__overlay">
          <div class="street-grid__glitch" data-text="005">005</div>
          <h4 class="street-grid__title">SUBWAY SURFERS</h4>
          <span class="street-grid__tag">@skate_rat</span>
        </div>
      </div>

      <div class="street-grid__item">
        <img src="{{ 'street-lookbook-placeholder.png' | asset_url }}" alt="Concrete Jungle" class="street-grid__image">
        <div class="street-grid__overlay">
          <div class="street-grid__glitch" data-text="006">006</div>
          <h4 class="street-grid__title">CONCRETE</h4>
        </div>
      </div>
    </div>
  </section>

  <!-- Quote/Statement Section -->
  <section class="street-statement">
    <div class="street-statement__container">
      <div class="street-statement__marker">//</div>
      <blockquote class="street-statement__text">
        BUILT DIFFERENT.<br/>
        MOVE DIFFERENT.<br/>
        <span class="street-statement__highlight">BE DIFFERENT.</span>
      </blockquote>
    </div>
  </section>

  <!-- Products Section -->
  <section class="street-products">
    <div class="street-products__header">
      <span class="street-products__label">// FEATURED PIECES</span>
      <h3 class="street-products__heading">THE ESSENTIALS</h3>
    </div>
    <div class="street-products__grid">
      {% for product in collections.street.products limit: 4 %}
        <a href="{{ product.url }}" class="street-product">
          <div class="street-product__image-container">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: '400x500', crop: 'center' }}" alt="{{ product.title }}" class="street-product__image">
            {% else %}
              <img src="{{ 'street-lookbook-placeholder.png' | asset_url }}" alt="{{ product.title }}" class="street-product__image">
            {% endif %}
            <div class="street-product__overlay">
              <span class="street-product__quick">QUICK VIEW</span>
            </div>
          </div>
          <div class="street-product__info">
            <h4 class="street-product__name">{{ product.title | upcase }}</h4>
            <span class="street-product__price">{{ product.price | money }}</span>
          </div>
        </a>
      {% else %}
        <!-- Fallback placeholders -->
        <div class="street-product street-product--placeholder">
          <div class="street-product__image-container">
            <img src="{{ 'street-lookbook-placeholder.png' | asset_url }}" alt="Coming Soon" class="street-product__image">
          </div>
          <div class="street-product__info">
            <h4 class="street-product__name">DROPPING SOON</h4>
            <span class="street-product__price">TBA</span>
          </div>
        </div>
        <div class="street-product street-product--placeholder">
          <div class="street-product__image-container">
            <img src="{{ 'street-lookbook-placeholder.png' | asset_url }}" alt="Coming Soon" class="street-product__image">
          </div>
          <div class="street-product__info">
            <h4 class="street-product__name">DROPPING SOON</h4>
            <span class="street-product__price">TBA</span>
          </div>
        </div>
        <div class="street-product street-product--placeholder">
          <div class="street-product__image-container">
            <img src="{{ 'street-lookbook-placeholder.png' | asset_url }}" alt="Coming Soon" class="street-product__image">
          </div>
          <div class="street-product__info">
            <h4 class="street-product__name">DROPPING SOON</h4>
            <span class="street-product__price">TBA</span>
          </div>
        </div>
        <div class="street-product street-product--placeholder">
          <div class="street-product__image-container">
            <img src="{{ 'street-lookbook-placeholder.png' | asset_url }}" alt="Coming Soon" class="street-product__image">
          </div>
          <div class="street-product__info">
            <h4 class="street-product__name">DROPPING SOON</h4>
            <span class="street-product__price">TBA</span>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="street-cta">
    <div class="street-cta__container">
      <div class="street-cta__bg-text">RETITLED</div>
      <div class="street-cta__content">
        <h2 class="street-cta__heading">READY TO HIT THE STREETS?</h2>
        <p class="street-cta__text">Shop the complete Street Division collection.</p>
        <div class="street-cta__buttons">
          <a href="/collections/street" class="street-btn street-btn--primary">SHOP STREET</a>
          <a href="/pages/studio-lookbook" class="street-btn street-btn--outline">VIEW STUDIO →</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer Navigation -->
  <nav class="street-nav">
    <a href="/" class="street-nav__link">← HOME</a>
    <a href="/pages/studio-lookbook" class="street-nav__link">STUDIO →</a>
  </nav>
</div>

<style>
  /* ============================================
     STREET LOOKBOOK STYLES
     Urban, dark, industrial aesthetic
     ============================================ */

  .street-lookbook {
    background: #0A0A0A;
    color: #fff;
    font-family: 'Inter', sans-serif;
    overflow-x: hidden;
  }

  /* Hero Section */
  .street-hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .street-hero__bg {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at center, #1a1a2e 0%, #0A0A0A 100%);
  }

  .street-hero__noise {
    position: absolute;
    inset: 0;
    opacity: 0.03;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%' height='100%' filter='url(%23noise)'/%3E%3C/svg%3E");
  }

  .street-hero__gradient {
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(circle at 20% 80%, rgba(74, 222, 128, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
  }

  .street-hero__content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 2rem;
  }

  .street-hero__tag {
    display: inline-block;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #4ade80;
    letter-spacing: 0.2em;
    margin-bottom: 2rem;
  }

  .street-hero__title {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(5rem, 15vw, 12rem);
    font-weight: 700;
    letter-spacing: -0.05em;
    line-height: 0.9;
    margin-bottom: 1.5rem;
    position: relative;
    text-shadow: 
      0 0 20px rgba(74, 222, 128, 0.3),
      0 0 40px rgba(74, 222, 128, 0.1);
  }

  .street-hero__title::before {
    content: attr(data-text);
    position: absolute;
    left: 3px;
    text-shadow: none;
    color: #ff0080;
    clip-path: inset(0 0 0 0);
    animation: glitch-1 4s infinite linear alternate-reverse;
    opacity: 0.5;
  }

  .street-hero__title::after {
    content: attr(data-text);
    position: absolute;
    left: -3px;
    text-shadow: none;
    color: #00ffff;
    clip-path: inset(0 0 0 0);
    animation: glitch-2 3s infinite linear alternate-reverse;
    opacity: 0.5;
  }

  @keyframes glitch-1 {
    0%, 90% { clip-path: inset(0 0 100% 0); }
    91% { clip-path: inset(20% 0 60% 0); }
    92% { clip-path: inset(80% 0 5% 0); }
    93%, 100% { clip-path: inset(0 0 100% 0); }
  }

  @keyframes glitch-2 {
    0%, 85% { clip-path: inset(100% 0 0 0); }
    86% { clip-path: inset(40% 0 30% 0); }
    87% { clip-path: inset(10% 0 70% 0); }
    88%, 100% { clip-path: inset(100% 0 0 0); }
  }

  .street-hero__subtitle {
    font-size: 1.125rem;
    color: rgba(255,255,255,0.6);
    max-width: 400px;
    margin: 0 auto;
  }

  .street-hero__scroll {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .street-hero__scroll-text {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.625rem;
    letter-spacing: 0.3em;
    color: rgba(255,255,255,0.4);
  }

  .street-hero__scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, #4ade80, transparent);
    animation: scroll-pulse 2s ease-in-out infinite;
  }

  @keyframes scroll-pulse {
    0%, 100% { opacity: 0.3; transform: scaleY(1); }
    50% { opacity: 1; transform: scaleY(1.2); }
  }

  /* Manifesto Section */
  .street-manifesto {
    padding: 8rem 2rem;
    background: #0A0A0A;
    border-top: 1px solid rgba(255,255,255,0.05);
  }

  .street-manifesto__container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .street-manifesto__label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #4ade80;
    letter-spacing: 0.2em;
    margin-bottom: 2rem;
  }

  .street-manifesto__heading {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 2rem;
  }

  .street-manifesto__accent {
    color: #4ade80;
    text-shadow: 0 0 30px rgba(74, 222, 128, 0.3);
  }

  .street-manifesto__text {
    font-size: 1.125rem;
    color: rgba(255,255,255,0.6);
    max-width: 600px;
    line-height: 1.8;
    margin-bottom: 3rem;
  }

  .street-manifesto__stats {
    display: flex;
    gap: 4rem;
  }

  .street-stat {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .street-stat__value {
    font-family: 'JetBrains Mono', monospace;
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
  }

  .street-stat__label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.625rem;
    letter-spacing: 0.2em;
    color: rgba(255,255,255,0.4);
  }

  /* Full Bleed Section */
  .street-fullbleed {
    position: relative;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
  }

  .street-fullbleed__image-container {
    position: absolute;
    inset: 0;
  }

  .street-fullbleed__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.7) contrast(1.1);
  }

  .street-fullbleed__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to right, rgba(10,10,10,0.95) 0%, rgba(10,10,10,0.5) 50%, transparent 100%);
  }

  .street-fullbleed__scanlines {
    position: absolute;
    inset: 0;
    pointer-events: none;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0,0,0,0.1) 2px,
      rgba(0,0,0,0.1) 4px
    );
    opacity: 0.3;
  }

  .street-fullbleed__content {
    position: absolute;
    left: 5%;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    max-width: 500px;
  }

  .street-fullbleed__number {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #4ade80;
    letter-spacing: 0.2em;
    display: block;
    margin-bottom: 1rem;
  }

  .street-fullbleed__title {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    margin-bottom: 1rem;
    text-shadow: 0 0 30px rgba(74, 222, 128, 0.2);
  }

  .street-fullbleed__desc {
    font-size: 1.125rem;
    color: rgba(255,255,255,0.7);
    margin-bottom: 2rem;
  }

  .street-fullbleed__cta {
    display: inline-block;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: #0A0A0A;
    background: #4ade80;
    padding: 1rem 2rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .street-fullbleed__cta:hover {
    background: #fff;
    box-shadow: 0 0 30px rgba(74, 222, 128, 0.5);
  }

  /* Bento Grid */
  .street-grid {
    padding: 4rem 2rem;
    background: #0A0A0A;
  }

  .street-grid__container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .street-grid__item {
    position: relative;
    aspect-ratio: 1/1;
    overflow: hidden;
    background: #1a1a1a;
    cursor: pointer;
  }

  .street-grid__item--feature {
    grid-column: span 2;
    grid-row: span 2;
  }

  .street-grid__item--wide {
    grid-column: span 2;
    aspect-ratio: 2/1;
  }

  .street-grid__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(30%);
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .street-grid__item:hover .street-grid__image {
    transform: scale(1.05);
    filter: grayscale(0%);
  }

  .street-grid__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(10,10,10,0.9) 0%, transparent 60%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1.5rem;
    opacity: 0.7;
    transition: opacity 0.4s ease;
  }

  .street-grid__item:hover .street-grid__overlay {
    opacity: 1;
  }

  .street-grid__glitch {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: #4ade80;
    letter-spacing: 0.2em;
    margin-bottom: 0.5rem;
    position: relative;
  }

  .street-grid__title {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .street-grid__tag {
    font-size: 0.75rem;
    color: rgba(255,255,255,0.5);
  }

  /* Statement Section */
  .street-statement {
    padding: 8rem 2rem;
    background: linear-gradient(180deg, #0A0A0A 0%, #111 100%);
